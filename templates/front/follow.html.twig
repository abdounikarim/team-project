{% extends 'base.html.twig' %}

{% block title %}Hello World!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <br/><br/>
    <h1>Suivre des projets, des domaines, des technologie...</h1>
    <p> Rechercher un domaine et ajouter le a vos centre d'interet</p>

     {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
    {% endfor %}

    <h2> Suivre une catégorie :</h2>
    {{ form_start(formCategory) }}
        {{ form_row(formCategory.name) }}
        <br/>
        <button type="submit" class="btn btn-success">Ajouter une catégorie a mon catalogue</button>
    {{ form_end(formCategory) }}

    <br/><br/>
    <h2> Mes catégories suivi</h2>

</div>
{% endblock %}
